<style> /* Random partial styling for CREATE -- because I am ignorant of other methods for solving this! */
  button {
    background-color: #FBA100; /* Orange */
    border: none;
    color: white;
    padding: 10px 20px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 40px;
    margin: 10px 50% 20px 50%;
    font-family: 'Just Another Hand', cursive;
    text-shadow: 2px 2px #000000;
    box-shadow: 2px 2px 10px #000000;
    border-radius: 4px;
  }
  h3 {
    font-size: 30px;
    padding-left: 17%;
  }
  input[type=text] {
    width: 80%;
    box-sizing: border-box;
    border: 3px solid #ccc;
    transition: 0.5s;
    outline: none;
    font-size: 18px;
  } 
  input[type=text]:focus {
    border: 3px solid #555;
  }
  textarea {
    width: 80%;
    height: 200px;
    box-sizing: border-box;
    border: 3px solid #ccc;
    transition: 0.5s;
    outline: none;
    margin-top: 12px;
    font-size: 18px;
  }
  textarea:focus {
    border: 3px solid #555;
  }  
</style>

<%= form_for :food, url: foods_path do |f| %>
<h3>
  <%= f.label :name %> for Recipe:<br>
  <%= f.text_field :name %>
</h3>

<h3>
  <%= f.label :ingredients %>:<br>
  <%= f.text_area :ingredients %>
</h3>

<h3>
  <%= f.label :instructions %>:<br>
  <%= f.text_area :instructions %>
</h3>

<h3>
  <%= f.submit %>
</h3>
<% end %>
